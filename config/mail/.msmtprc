defaults
auth on
tls on
tls_starttls on
tls_trust_file ~/.local/share/protonmail/cert.pem
logfile ~/.local/share/msmtp/msmtp.log

account protonmail
host 127.0.0.1
port 1025
eval echo "user $(cat ~/.authinfo | grep 127.0.0.1  | awk '{print $4}')"
passwordeval "cat ~/.authinfo | grep 127.0.0.1  | awk '{print $6}'"

account personal
host 127.0.0.1
port 1025
eval echo "user $(cat ~/.authinfo | grep personal  | awk '{print $4}')"
passwordeval "cat ~/.authinfo | grep personal  | awk '{print $6}'"

account default: protonmail
